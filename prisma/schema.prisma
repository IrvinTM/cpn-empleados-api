// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"  // ‚Üê Usar // en lugar de #
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Empleado {
  id                Int      @id @default(autoincrement())
  nombre            String
  email             String   @unique
  departamento      String
  fecha_contratacion DateTime @default(now())
  
  @@map("empleados")
}